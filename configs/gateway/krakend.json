{
  "version": 3,
  "port": 8000,
  "tls": {
    "disabled": true
  },
  "extra_config": {
    "telemetry/opentelemetry": {
      "service_name": "krakend-gateway",
      "exporters": {
        "otlp": [
          {
            "host": "jaeger",
            "name": "krakend-gateway",
            "use_http": false,
            "port": 4317,
            "disable_metrics": true
          }
        ]
      }
    }
  },
  "endpoints": [
    {
      "endpoint": "/m1-users",
      "method": "GET",
      "backend": [
        {
          "url_pattern": "/users",
          "host": ["http://microservice01:3000"]
        }
      ]
    },
    {
      "endpoint": "/m1-subscriptions/{userId}",
      "method": "GET",
      "backend": [
        {
          "url_pattern": "/users/{userId}",
          "host": ["http://microservice01:3000"]
        }
      ]
    }
  ]
}
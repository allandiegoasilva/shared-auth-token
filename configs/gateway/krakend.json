{
  "version": 3,
  "port": 8000,
  "endpoints": [
    {
      "endpoint": "/m1-users",
      "method": "GET",
      "backend": [
        {
          "url_pattern": "/users",
          "host": ["http://microservice01:3000"]
        }
      ],
      "extra_config": {
        "telemetry/opentelemetry": {
          "exporters": [
            {
              "type": "otlp",
              "host": "tempo",
              "port": 4318,
              "name": "microservice01-users-endpoint"
            }
          ]
        }
      }
    },
    {
      "endpoint": "/m1-subscriptions/{userId}",
      "method": "GET",
      "backend": [
        {
          "url_pattern": "/users/{userId}",
          "host": ["http://microservice01:3000"]
        }
      ]
    }
  ]
}